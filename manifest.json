{
	"name": "PirateBay Expander",
	"description": "This extension expand images of torrents description",
	"version": "1.0",
	"manifest_version": 2,
	
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"permissions": [
		 "http://*/"
	],
  
	"content_scripts": [
		{
			"matches": ["*://*.thepiratebay.sx/torrent/*"],
			"js": ["data.js", "tpb.expander.js"],
			"css": ["css/style.css"],
			"run_at": "document_end"
		},
		{
			"matches": ["*://*.thepiratebay.sx/*"],
			//"exclude_globs" : ["*://*.thepiratebay.sx/torrent/*"],
			"js": ["mustache.min.js", "underscore.min.js", "tpb.helper.js"],
			"css": ["css/style2.css"],
			"run_at": "document_end"
		},
		
		{
			"matches": ["*://*.thepiratebay.sx/*"],
			//"exclude_globs" : ["*://*.thepiratebay.sx/torrent/*"],
			"css": ["css/style3.css"],
			"run_at": "document_start"
		}
	],
	
	"web_accessible_resources": [
		"img/ico/cov.gif",
		"template.html"
	]
}