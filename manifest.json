{
	"name": "PirateBay Expander",
	"description": "This extension expand images of torrents description",
	"version": "1.0",
	"manifest_version": 2,
	
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"permissions": [
		"http://*/"
	],
  
	"content_scripts": [
		{
			"matches": ["*://*.thepiratebay.sx/torrent/*"],
			"js": ["tpb.expander.js"],
			"css": ["style.css"]
		}
	]
}